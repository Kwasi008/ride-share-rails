<div class="container-fluid">
  <div class="flex-row row">
    <% if @vehicles.blank? %>
       <p><strong>No locations just yet!</strong></p><br/>
    <% else %>
      <% @locations.each do |location| %>
        <div class="ml-5">
          <div class="row">
            <div class="col-sm border-top border-bottom">
              <%= location.full_address %>
              <%if location.location_relationships.first.default %>
                <span style="color: #ff8262;">
                  <i class="fa fa-check"></i>
                </span>
              <%end%>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
